# Server Configuration
PORT=5000

# MongoDB Connection String
# Replace with your actual MongoDB connection URI
MONGO_URI="mongodb+srv://<user>:<password>@<cluster-url>/<database-name>?retryWrites=true&w=majority"

# JSON Web Token
# Use a long, random string for security
JWT_SECRET="your-super-secret-and-long-jwt-secret"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_SECRET="another-super-secret-for-refresh-tokens"
JWT_REFRESH_EXPIRES_IN="7d"

# Frontend URL for CORS
CLIENT_URL="http://localhost:5173"

# Nodemailer configuration for sending emails (e.g., for password reset)
# Use a service like Gmail, SendGrid, Mailgun, etc.
EMAIL_HOST="smtp.example.com"
EMAIL_PORT=587
EMAIL_USER="your-email@example.com"
EMAIL_PASS="your-email-password"
EMAIL_FROM="ToDo App <noreply@todoapp.com>"
